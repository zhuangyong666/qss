page {
    background: #f2f2f2;
}

.nav,.nav-title {
    z-index: 9999999999;
}

.back {
    color: #fff;
}

.container-page {
    padding: 0 30rpx 30rpx;
}

.card,.container-page {
    display: flex;
    flex-direction: column;
}

.card {
    border-radius: 5px;
    margin-top: 30rpx;
}

.shadow-box {
    display: flex;
    flex-direction: column;
    box-shadow: 0 0 16px #eee;
}

.card-img {
    width: 100%;
    height: 350rpx;
    background: #aaa;
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
    position: relative;
}

.card-title {
    font-size: 26rpx;
    margin-bottom: 30rpx;
    color: #aaa;
}

.card-title,.play-btn-box {
    display: flex;
    justify-content: center;
    align-content: center;
    align-items: center;
}

.play-btn-box {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
}

.play-btn {
    width: 120rpx;
    height: 120rpx;
    border-radius: 100%;
    display: flex;
    justify-content: center;
    align-content: center;
    align-items: center;
    background: rgba(0,0,0,.7);
    color: #fff;
}

.play-btn>text {
    transform: rotate(90deg);
    font-size: 56rpx;
}

.card-bottom {
    padding: 30rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    font-size: 28rpx;
    background: #fff;
}

.card-bottom>view {
    font-size: 24rpx;
    color: #aaa;
}

.card-bottom>view>text {
    font-size: 26rpx;
}