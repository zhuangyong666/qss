.main {
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    background: #fff;
    border-top: .5px solid #eee;
}

.hot,.main {
    display: flex;
}

.hot {
    flex-direction: column;
    justify-content: space-evenly;
    width: 65%;
    margin-left: .5rem;
    padding: 1rem 0 1rem 1rem;
}

.hot>view {
    text-align: left;
    font-size: 30rpx;
    padding-bottom: 0;
}

.hot>text {
    text-align: left;
    font-size: 24rpx;
    line-height: 24rpx;
    padding-top: 0;
    color: #aaa;
    margin-top: -16rpx;
}

.button {
    padding: 1rem;
    font-size: 27rpx;
    line-height: 32rpx;
    position: relative;
}

.button>text {
    padding: 15rpx 40rpx;
    background: linear-gradient(90deg,#ee5c4d,#f43f6c);
    border-radius: 20px;
    color: #fff;
}

.seamlessscrolling {
    background-color: #00c201;
    font-size: 22rpx;
    color: #fff;
    padding: 10rpx 20rpx;
    display: flex;
    justify-content: space-between;
}

.seamlessscrolling-more {
    border-radius: 4rpx;
    background-color: #e25371;
    padding: 0 10rpx;
    font-size: 20rpx;
}

.T-L-T-sum {
    min-width: 15px;
    height: 30rpx;
    line-height: 30rpx!important;
    text-align: center;
    border-radius: 50%;
    background-color: #00c201;
    color: #fff;
    position: absolute;
    top: 0rpx;
    right: 12rpx;
    overflow: hidden;
    margin-top: 0!important;
    font-size: 24rpx!important;
    text-overflow: ellipsis;
    white-space: nowrap;
    padding: 5rpx;
}