page {
    background: #c2222a;
}

.nav {
    background: transparent;
}

.nav-title {
    color: #fff;
}

.nav-color {
    background: #c42029;
    transition: 2s;
}

.back {
    color: #fff;
}

.container-page {
    display: flex;
    flex-direction: column;
}

.pure-bottom {
    content: "";
    width: 94.6%;
    height: 550rpx;
    z-index: -1;
    top: 0;
    border-radius: 0 0 50% 50%;
    border: 20rpx solid #ffb77d;
    border-top: 0rpx;
    background: #c42029;
    overflow: hidden;
    align-content: center;
    box-shadow: 0 -6px 23px #000;
    position: relative;
}

.page-bottom-card,.pure-bottom {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.page-bottom-card {
    width: 560rpx;
    height: 280rpx;
    z-index: 1;
    background: #fff;
    border-radius: 5px;
    position: absolute;
    bottom: -2rpx;
}

.main-title {
    font-size: 24rpx;
    color: #aaa;
    margin-bottom: 30rpx;
}

.main-msg {
    font-size: 26rpx;
    margin-bottom: 6rpx;
}

.save-money-img {
    position: absolute;
    width: 400rpx;
    height: 47rpx;
}

.enve-list-box {
    display: flex;
    flex-direction: column;
    padding: 0 30rpx;
    margin-top: 30rpx;
}

.title {
    justify-content: space-between;
    font-size: 36rpx;
    color: #fdda99;
    margin-top: 30rpx;
}

.left-line-box,.title {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.left-line-box,.right-line-box {
    justify-content: flex-end;
}

.right-line-box {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.left-line {
    width: 150rpx;
    height: 4rpx;
    background: linear-gradient(270deg,#fdda99,#c2222a);
}

.circular {
    width: 20rpx;
    height: 20rpx;
    background: #fdda99;
    border-radius: 100%;
}

.right-line {
    width: 150rpx;
    height: 4rpx;
    background: linear-gradient(90deg,#fdda99,#c2222a);
}

.no-enve-list {
    width: 100%;
    height: 550rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 28rpx;
    color: #d7d9d8;
}

.no-enve-list>text {
    font-size: 150rpx;
    margin-bottom: 30rpx;
}

.no-enve-list-btn {
    margin-top: 30rpx;
    padding: 20rpx 90rpx;
    border-radius: 40px;
    background: linear-gradient(180deg,#fd2632,#d5010f);
    color: #fff;
}

.rec-goods-list {
    flex-direction: column;
    padding: 0 30rpx;
}

.rec-box,.rec-goods-list {
    display: flex;
}

.rec-box {
    flex-direction: row;
    align-items: center;
    flex-wrap: wrap;
    justify-content: space-between;
    margin-top: 20rpx;
}

.rec-card {
    display: flex;
    flex-direction: column;
    background: #fff;
    border-radius: 5px;
    width: 49%;
    margin-bottom: 15rpx;
}

.rec-card-img {
    width: 338rpx;
    height: 338rpx;
    background: #eee;
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
}

.rec-card-main {
    margin: 10rpx;
    display: flex;
    flex-direction: column;
}

.rec-card-title {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    font-size: 30rpx;
}

.rec-card-enve {
    display: flex;
    flex-direction: row;
    align-items: flex-end;
    color: #d5010f;
    font-size: 20rpx;
    margin-top: 20rpx;
}

.rec-card-enve>text {
    font-size: 30rpx;
    margin-right: 20rpx;
}

.rec-card-enve>view {
    font-size: 42rpx;
    margin-right: 10rpx;
    line-height: 42rpx;
}

.enve-list {
    margin-top: 30rpx;
}

.enve-item-box,.enve-list {
    display: flex;
    flex-direction: column;
}

.enve-item-box {
    margin-bottom: 20rpx;
}

.enve-item {
    position: relative;
    background: #fff;
    border-radius: 10px;
    padding: 10rpx;
    justify-content: space-between;
    overflow: hidden;
}

.enve-item,.enve-item-left {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.enve-img {
    width: 190rpx;
    height: 228rpx;
    margin-right: 20rpx;
}

.enve-item-main {
    height: 228rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    font-size: 26rpx;
    color: #aaa;
}

.enve-item-price {
    color: #c42029;
    font-size: 60rpx;
}

.enve-item-main>view>text {
    font-size: 26rpx;
}

.main-progress {
    width: 240rpx;
    margin-top: 10rpx;
    position: relative;
}

.main-progress text {
    position: absolute;
    top: 0;
    left: 0;
    font-size: 24rpx;
    z-index: 1;
    padding-left: 20rpx;
    line-height: 20px;
    color: #fff;
}

.enve-item-right {
    flex-direction: column;
    justify-content: space-around;
    height: 228rpx;
    font-size: 34rpx;
    color: #d5010f;
}

.enve-item-right,.enve-item-right>view {
    display: flex;
    align-items: center;
}

.enve-item-right>view {
    color: #fff;
    font-size: 30rpx;
    width: 150rpx;
    padding: 10rpx 0;
    border-radius: 30px;
    background: #fd2632;
    justify-content: center;
    align-content: center;
}

.enve-item-right>text {
    font-size: 140rpx;
    transform: rotate(55deg);
    color: #324b5f;
}

.enve-form {
    display: flex;
    flex-direction: row;
    align-items: center;
    color: #f6d3d9;
    font-size: 28rpx;
    margin-top: 10rpx;
}

.enve-form>view {
    color: #fff;
    white-space: nowrap;
    text-overflow: ellipsis;
    display: block;
    overflow: hidden;
    width: 330rpx;
}

.enve-item-shade {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: hsla(0,0%,100%,.6);
}