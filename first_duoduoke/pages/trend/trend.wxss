page {
    background: #f5f5f5;
}

.nav {
    z-index: 999;
    position: fixed;
    left: 0;
    right: 0;
}

.nav-color {
    transition: 1s;
}

.nav-title {
    z-index: 999;
    font-size: 32rpx;
}

.container-s {
    background: #f5f5f5;
}

.container-s,.page-top {
    display: flex;
    flex-direction: column;
}

.page-top {
    padding: 30rpx;
    background: #fff;
}

.tag-box {
    justify-content: space-between;
    font-size: 30rpx;
    font-weight: 700;
    margin-top: 10rpx;
    margin-bottom: 40rpx;
}

.tag-box,.tag-box>view {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.tag-box>view {
    font-size: 24rpx;
    font-weight: 400;
    color: #697377;
}

.tag-box>view>view {
    width: 20rpx;
    height: 20rpx;
    justify-content: center;
    align-content: center;
    border: 1px solid #a7adb1;
    border-radius: 100%;
    padding: 4rpx;
    margin-left: 6rpx;
    font-size: 24rpx;
}

.scroll-news,.tag-box>view>view {
    display: flex;
    align-items: center;
}

.scroll-news,.scroll-news-left {
    flex-direction: row;
}

.scroll-news-left {
    display: flex;
    align-items: center;
    font-weight: 550;
}

.scroll-news-left>text {
    font-size: 40rpx;
    color: #828d93;
}

.scroll-news-swiper {
    width: 100%;
    height: 40rpx;
    margin-left: 30rpx;
}

.scroll-news-main {
    font-size: 28rpx;
    text-align: left;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    width: 100%;
    color: #788085;
}

.text-box {
    margin-top: 40rpx;
    margin-bottom: 30rpx;
    border-radius: 10px;
    padding: 50rpx 30rpx;
    background: #f5f5f5;
    position: relative;
}

.textarea {
    font-size: 28rpx;
    width: 100%;
    height: 200rpx;
}

.emptyc {
    position: absolute;
    font-size: 24rpx;
    right: 19rpx;
    bottom: 22rpx;
    letter-spacing: 2rpx;
    color: #888;
    padding: 10rpx;
    z-index: 999;
}

.btn {
    width: 100%;
    padding: 0;
    font-size: 30rpx;
    color: #fff;
    border-radius: 30px;
    background: #ff2232;
    margin: 0 0 30rpx;
}

.steps-d {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
    background: #fff;
    margin: 0 auto;
    border-radius: 10px;
    padding: 60rpx 30rpx 20rpx;
    box-shadow: 0 0 4px #ccc;
    position: relative;
}

.steps-tag {
    position: absolute;
    top: 0;
    left: 0;
    border-top-left-radius: 10px;
    border-bottom-right-radius: 10px;
    padding: 6rpx 20rpx;
    font-size: 26rpx;
    color: #464646;
    background: #f5f5f5;
}

.steps-item-d {
    flex-direction: column;
    font-size: 26rpx;
    color: #8f9499;
}

.steps-item-2-d,.steps-item-d {
    display: flex;
    align-items: center;
}

.steps-item-2-d {
    border-radius: 100%;
    justify-content: center;
    align-content: center;
    background: #ffefd5;
    width: 70rpx;
    height: 70rpx;
    margin-bottom: 20rpx;
}

.steps-item-2-d>text {
    font-size: 48rpx;
    color: #f36b0a;
}

.steps-line-d {
    width: 40rpx;
    height: 4rpx;
    background: #f7cc65;
    position: relative;
    margin: -44rpx 20rpx 0;
}

.steps-line-d>view {
    position: absolute;
    right: 0;
    top: -16rpx;
    width: 30rpx;
    height: 30rpx;
    border-radius: 100%;
    border: 4rpx solid transparent;
    border-right-color: #f7cc65;
    transform: rotate(-42deg);
}

.page-bottom {
    display: flex;
    flex-direction: column;
    padding: 30rpx;
    background: #fff;
    margin-top: 20rpx;
}

.tag-right {
    font-size: 30rpx!important;
}

.card {
    padding-top: 40rpx;
    border-top: 1px solid #f1f1f1;
    margin-bottom: 40rpx;
    display: flex;
    flex-direction: row;
}

.card-img {
    width: 270rpx;
    height: 270rpx;
    border-radius: 6px;
    background: #eee;
    margin-right: 20rpx;
}

.card-main {
    display: flex;
    flex: 1;
    height: 270rpx;
    flex-direction: column;
    justify-content: space-between;
}

.card-title {
    font-size: 34rpx;
    font-weight: 700;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.card-data {
    display: flex;
    flex-direction: column;
}

.card-d-t {
    font-size: 26rpx;
    color: #5a5a5f;
}

.card-d-m {
    font-size: 34rpx;
    color: #f31614;
    font-weight: 700;
    margin: 10rpx 0;
}

.card-d-b {
    font-size: 24rpx;
    color: #7e7e7e;
}