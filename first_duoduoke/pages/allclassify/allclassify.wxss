.container {
    height: 100%;
}

.container,.heard {
    display: flex;
    flex-direction: column;
}

.heard {
    width: 100%;
    background: linear-gradient(90deg,#8d68d9,#fc4849,#fb7840);
    justify-content: center;
    align-items: center;
    align-content: center;
}

.title {
    margin: 7rem auto 0;
    color: #fff;
}

.title>text {
    font-size: 50rpx;
}

.search {
    margin: 2rem 1rem;
    height: 2rem;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
    border-radius: 100rpx;
    background-color: rgba(0,0,0,.2);
    width: 90%;
    border-top: 0.1rpx solid transparent;
}

.search>icon {
    margin: 0 20rpx;
}

.search>input {
    font-size: 26rpx;
    flex: 1;
}

.ind-input {
    color: #ccc;
    line-height: 80rpx;
}

.goods-1 {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    border: 1px #000;
}

scroll-view {
    height: 65vh;
    margin-right: auto;
    margin-left: auto;
}

.broadside_nav {
    height: 30rem;
    width: 200rpx;
    flex-direction: column;
}

.broadside_nav,.sort {
    display: flex;
}

.sort {
    justify-content: center;
    align-items: center;
    align-content: center;
    background: #fff;
}

.sort>text {
    padding: 1rem;
    font-size: 26rpx;
}

.active {
    background: rgba(228,223,223,.575);
    border-left: 3px solid red;
}

.main {
    flex-direction: row;
    justify-content: space-between;
    flex-wrap: wrap;
    width: 550rpx;
}

.details,.main {
    display: flex;
}

.details {
    float: left;
    width: 148rpx;
    height: 200rpx;
    margin-bottom: 10rpx;
    margin-top: 10rpx;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    align-content: center;
    margin-left: .8rem;
}

.details>image {
    margin-right: auto;
    margin-left: auto;
    margin-top: 0;
    width: 148rpx;
    height: 148rpx;
}

.details .cate-name {
    font-size: 24rpx;
    text-align: center;
    margin-top: .8rem;
}

.clearfix::after {
    content: "";
    display: block;
    clear: both;
}

.icon-shangpinfenlei {
    font-size: 115rpx;
}