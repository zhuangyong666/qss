page {
    background: #f2f2f2;
}

.nav {
    background: #f95120;
}

.nav-title {
    color: #fff;
}

.container-page {
    padding: 30rpx;
}

.card,.container-page {
    display: flex;
    flex-direction: column;
}

.card {
    background: #fff;
    border-radius: 10px;
    padding: 20rpx;
    overflow: hidden;
    margin-bottom: 30rpx;
}

.top {
    justify-content: space-between;
    padding-bottom: 20rpx;
    border-bottom: 1px solid #eee;
    font-size: 30rpx;
}

.top,.top-right {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.time {
    color: #585858;
}

.status-yes {
    color: #f95120;
}

.status-no {
    color: #aaa;
}

.main {
    padding-top: 20rpx;
    display: flex;
    flex-direction: row;
}

.card-img {
    width: 180rpx;
    height: 180rpx;
    border-radius: 5px;
    background: #eee;
    margin-right: 20rpx;
}

.main-right {
    flex: 1;
    display: flex;
    flex-direction: column;
    position: relative;
    height: 180rpx;
    justify-content: space-between;
}

.card-title {
    font-size: 28rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.card-icon {
    position: absolute;
    font-size: 160rpx;
    bottom: -70rpx;
    right: -30rpx;
    color: #f95120;
}

.msg {
    margin-top: 100rpx;
    font-size: 30rpx;
    color: #585858;
}

.card-btn,.msg {
    display: flex;
    justify-content: center;
    align-items: center;
    align-content: center;
}

.card-btn {
    font-size: 26rpx;
    width: 120rpx;
    padding: 8rpx 0;
    border-radius: 30px;
    background: #f95120;
    color: #fff;
}