page {
    height: 100%;
    background: #f8f6f6;
}

.container {
    margin-left: auto;
    margin-right: auto;
    justify-content: flex-start;
    font-size: 26rpx;
    color: #888585;
    margin-bottom: 120rpx;
}

.container,.opt_goods {
    display: flex;
    flex-direction: column;
}

.opt_goods {
    width: 90%;
    margin-top: 1.5rem;
}

.opt_goods-1 {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    align-content: center;
    padding: 89rpx 130rpx;
    background: #fff;
    margin: .5rem 0 0;
    color: #aaa;
}

.opt_goods-1>text {
    font-size: 40rpx;
    font-weight: 100;
    margin-right: 12rpx;
}

.opt_goods-2 {
    width: 678rpx;
    height: 212rpx;
    background: #fff;
    display: flex;
    flex-direction: row;
    align-items: center;
    box-sizing: border-box;
    padding: 10rpx;
    margin-top: .5rem;
}

.aging {
    text-align: end;
    color: #f44169;
    margin-top: 10rpx;
}

.goods_img {
    width: 190rpx;
    height: 190rpx;
    border-radius: 5px;
    background: #eee;
    margin-right: 10rpx;
}

.goods_main {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
}

.goods_title {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    flex-direction: row;
    flex-wrap: wrap;
    align-items: center;
    justify-content: flex-start;
    font-size: 30rpx;
    color: #000;
}

.goods_sales {
    font-size: 24rpx;
    color: #aaa;
}

.goods_price {
    font-size: 26rpx;
    color: #ef5d4e;
}

.opt_goods>.textarea-wrp {
    padding: 0 25rpx;
    background-color: #fff;
    margin-top: 20rpx;
}

textarea {
    width: 100%;
    padding: 25rpx 0;
    height: 5em;
    color: #000;
}

.photoAndVideos {
    width: 90%;
    display: flex;
    flex-direction: column;
    margin-top: 1.5rem;
}

.photoAndVideos>.opt_img {
    margin-top: 25rpx;
    margin-left: -18rpx;
}

.close-icon,image {
    width: 209.5rpx;
    height: 209.5rpx;
}

.close-icon {
    position: relative;
    margin: 0 0 18rpx 18rpx;
    float: left;
}

.close-icon>icon {
    position: absolute;
    height: 32rpx;
    width: 32rpx;
    border-radius: 100px;
    top: -15rpx;
    left: 195rpx;
    background: rgba(0,0,0,.5);
    color: #fff;
    font-size: 22rpx;
}

.add-img,.close-icon>icon {
    display: flex;
    justify-content: center;
    align-content: center;
    align-items: center;
}

.add-img {
    width: 209.5rpx;
    height: 209.5rpx;
    margin: 0 0 18rpx 18rpx;
    float: left;
    background: #fff;
    font-size: 100rpx;
}

.btn-commit {
    position: fixed;
    bottom: 0;
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-content: center;
    align-items: center;
    background: linear-gradient(90deg,#f44169,#ef5d4e);
    color: #fff;
    height: 3rem;
    padding: 0;
}

.btn-commit,.btn-commit::after {
    border-radius: 0;
}

.btn-commit>text {
    font-size: 24rpx;
    margin-left: .2rem;
    margin-top: 8rpx;
}

.clearfix::after {
    content: "";
    display: block;
    clear: both;
}

.shade {
    position: fixed;
    top: 0;
    left: 0;
    height: 100vh;
    width: 100%;
    background-color: rgba(0,0,0,.5);
    z-index: 1;
}

.shade-top {
    justify-content: center;
    align-content: center;
    color: #fff;
    height: 77vh;
    padding: 0 60rpx;
    font-size: 26rpx;
    line-height: 32rpx;
}

.shade-bottom,.shade-top {
    display: flex;
    align-items: center;
}

.shade-bottom {
    position: fixed;
    bottom: 0;
    right: 0;
    background: #f8f8f8;
    height: 21vh;
    width: 100%;
    flex-direction: column;
    color: #888585;
}

.pbtnAndVbtn {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    height: 15vh;
    width: 60%;
}

.pbtnAndVbtn>view {
    width: 4rem;
    padding: 16rpx 0;
    flex-direction: column;
}

.pbtnAndVbtn>view,.pbtnAndVbtn>view>icon {
    display: flex;
    justify-content: center;
    align-items: center;
}

.pbtnAndVbtn>view>icon {
    width: 1.6rem;
    height: 1.6rem;
    padding: .5rem;
    background: #fff;
    font-size: 27px;
    border-radius: 10px;
    border: 1px solid #eee;
    align-content: center;
}

.pbtnAndVbtn>view>text {
    font-size: 24rpx;
    margin-top: .5rem;
}

.remove {
    font-size: 30rpx;
    border-top: 1px solid #eee;
    width: 100%;
    height: 6vh;
    display: flex;
    justify-content: center;
    align-content: center;
    align-items: center;
}

.dontLook {
    display: none;
}

video {
    margin-top: 10rpx;
}

.seamlessscrolling {
    width: 94%;
    background-color: #00c201;
    font-size: 22rpx;
    color: #fff;
    padding: 0 3%;
    display: flex;
    justify-content: space-between;
}

.seamlessscrolling-coin {
    padding: 10rpx 0;
}