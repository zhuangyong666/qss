page {
    background: #fbdb51;
}

.nav {
    background: transparent;
    transition: 1s;
}

.nav-color {
    background: #f95120;
    transition: 1s;
}

.nav-title {
    color: #fff;
}

.container {
    background-image: url(https://we7.haojiangnet.com//addons/first_duoduoke/resource/images/app/every-day.png);
    background-repeat: no-repeat;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    padding: 0 30rpx;
}

.page-img {
    width: 480rpx;
    height: 300rpx;
}

.page-message {
    font-size: 26rpx;
    color: #fff;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 50rpx;
}

.m-t {
    margin-bottom: 20rpx;
}

.swiper-box {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    width: 100%;
    margin-top: 50rpx;
}

.swiper-tips>text {
    font-size: 36rpx;
    color: #585858;
    font-weight: 550;
}

.swiper-box-t {
    margin: 20rpx 0;
    font-size: 30rpx;
    color: #fff;
    display: flex;
    flex-direction: row;
    align-items: center;
}

switch {
    margin-left: 10rpx;
}

.swiper-box-b {
    background: #fff;
    border-radius: 5px;
    width: inherit;
    position: relative;
}

.swiper-tips {
    position: absolute;
    top: 260rpx;
    right: 30rpx;
    animation: jiantou 1s linear infinite;
}

@-webkit-keyframes jiantou {
    0% {
        right: 30rpx;
        opacity: 1;
    }

    100% {
        right: 0;
        opacity: 0;
    }
}

@keyframes jiantou {
    0% {
        right: 30rpx;
        opacity: 1;
    }

    100% {
        right: 0;
        opacity: 0;
    }
}

swiper {
    margin: 30rpx;
    height: 470rpx;
}

.suntan {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    position: relative;
}

.suntan-icon {
    position: absolute;
    top: 0rpx;
    right: 50rpx;
    z-index: -1;
}

.suntan-icon>text {
    font-size: 190rpx;
    color: red;
    opacity: .3;
}

.suntan-top {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
}

.suntan-top-img {
    width: 100rpx;
    height: 100rpx;
    border-radius: 5px;
    margin-right: 30rpx;
    background: #eee;
}

.suntan-main,.user-name {
    font-size: 28rpx;
}

.suntan-main {
    margin: 30rpx 0;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    height: 110rpx;
    line-height: 36rpx;
}

.suntan-imgBox {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
    margin-right: -10rpx;
}

.suntan-img {
    width: 200rpx;
    height: 200rpx;
    border-radius: 5px;
    background: #eee;
    margin-right: 10rpx;
}

.goods-card-box {
    width: inherit;
    margin-top: 30rpx;
}

.goods-card,.goods-card-box {
    display: flex;
    flex-direction: column;
}

.goods-card {
    background: #fff;
    border-radius: 5px;
    margin-bottom: 30rpx;
    position: relative;
}

.goods-card-img {
    width: 630rpx;
    height: 630rpx;
    margin: 30rpx 30rpx 20rpx;
    background: #eee;
}

.goods-shop {
    padding: 10rpx;
    background: #f95120;
    display: flex;
    flex-direction: row;
    align-items: center;
    color: #fff;
    font-size: 24rpx;
    position: absolute;
    top: 690rpx;
}

.goods-shop-tag {
    position: absolute;
    border: solid;
    border-width: 30rpx 15rpx;
    border-color: #f95120 transparent #f95120 #f95120;
    right: -15rpx;
    top: 0;
    bottom: 0;
}

.goods-shop-img {
    width: 40rpx;
    height: 40rpx;
    border-radius: 100%;
    background: #fff;
    margin-right: 20rpx;
}

.goods-title {
    margin: 30rpx;
    font-size: 30rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.goods-card-bottom {
    display: flex;
    flex-direction: row;
    margin: 0 30rpx 40rpx;
    align-items: flex-end;
    justify-content: space-between;
}

.goods-card-b-l {
    display: flex;
    flex-direction: column;
}

.goods-card-price {
    display: flex;
    flex-direction: row;
    align-items: flex-end;
    font-size: 24rpx;
    color: #d32320;
    line-height: 30rpx;
    margin-bottom: 20rpx;
}

.goods-card-price>view {
    margin-right: 30rpx;
}

.goods-card-price>view>text {
    font-size: 34rpx;
}

.goods-card-time {
    font-size: 24rpx;
    color: #aaa;
}

.goods-card-b-r>view {
    width: 184rpx;
    height: 64rpx;
    background: linear-gradient(to right bottom,#fe6924,#f01e13);
    border-radius: 30px;
    font-size: 26rpx;
}

.goods-card-b-r>view,.share {
    color: #fff;
    display: flex;
    justify-content: center;
    align-content: center;
    align-items: center;
}

.share {
    position: fixed;
    bottom: 150rpx;
    right: 40rpx;
    width: 100rpx;
    height: 100rpx;
    background: #f95120;
    border-radius: 100%;
    flex-direction: column;
    font-size: 20rpx;
}

.share>text {
    font-size: 30rpx;
}

.shade {
    background: rgba(1,1,1,.6);
}

.shade,.share-shade {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1e+24;
}

.share-shade {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-end;
}

.share-shade-img {
    width: 550rpx;
    height: 950rpx;
    background: #ddd;
}

.share-shade-msg {
    margin-top: 3rem;
    font-size: 22rpx;
    color: #fff;
}

.share-shade-btn-box {
    width: 90%;
    margin: 30rpx 0;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.share-shade-btn {
    padding: 10rpx 0;
    width: 330rpx;
    border-radius: 5px;
    display: flex;
    justify-content: center;
    align-content: center;
    align-items: center;
    font-size: 24rpx;
    color: #fff;
    line-height: inherit;
}

.share-shade-btn>text {
    font-size: 50rpx;
    margin-right: 10rpx;
}

.shade-btn-l {
    background: #f12d06;
}

.shade-btn-r {
    background: #09ba07;
}

.win-list {
    position: absolute;
    right: 0;
    top: 210rpx;
    background: rgba(0,0,0,.5);
    padding: 10rpx 10rpx 10rpx 30rpx;
    border-top-left-radius: 30px;
    border-bottom-left-radius: 30px;
    font-size: 28rpx;
    color: #fff;
}