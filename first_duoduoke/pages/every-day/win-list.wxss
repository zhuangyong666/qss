page {
    background: linear-gradient(to right bottom,#ff7126,#ee1712);
}

.nav {
    background: transparent;
}

.back,.nav-title {
    color: #fff;
}

.container-page {
    display: flex;
    flex-direction: column;
    padding: 30rpx;
}

.noOrder-box {
    width: 100%;
    min-height: inherit;
    justify-content: center;
    align-content: center;
}

.noOrder-box,.tips {
    display: flex;
    align-items: center;
}

.tips {
    flex-direction: column;
    justify-content: space-between;
    height: 280rpx;
    font-size: 26rpx;
    color: #fff;
}

.tips>text {
    font-size: 100rpx;
    color: #fff;
}

.tips-btn {
    padding: 14rpx 70rpx;
    background: #fff;
    border-radius: 30px;
    color: #de5233;
    font-size: 32rpx;
}

.order-card {
    padding: 20rpx;
    background: #fff;
    border-radius: 10px;
    flex-direction: column;
    margin-bottom: 20rpx;
}

.order-card,.order-time {
    display: flex;
}

.order-time {
    margin: 0 0 20rpx;
    font-size: 24rpx;
    color: #aaa;
    justify-content: space-between;
}

.order-card-main,.order-time {
    align-items: center;
}

.order-card-main {
    display: flex;
    flex-direction: row;
}

.order-card-img {
    width: 180rpx;
    height: 180rpx;
    border-radius: 5px;
    margin-right: 30rpx;
    background: #eee;
}

.order-card-right {
    flex: 1;
    display: flex;
    flex-direction: column;
    height: 180rpx;
    justify-content: space-between;
}

.order-title {
    font-size: 28rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.order-main-bottom {
    justify-content: space-between;
}

.b-left,.order-main-bottom {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.b-left {
    line-height: 28rpx;
    font-size: 28rpx;
    color: #f2d737;
}

.b-left>text {
    margin-right: 10rpx;
}

.firend {
    font-size: 26rpx;
    padding: 10rpx 20rpx;
    background: linear-gradient(90deg,#ff7126,#ee1712);
    color: #fff;
    border-radius: 30px;
    justify-content: flex-end;
}

.look-result {
    font-size: 26rpx;
    color: #ee1712;
}

.status-yes {
    color: #f95120;
}

.status-no {
    color: #aaa;
}